<div class="container">
  <div class="row">
    <div class="col-lg-6 sign-in-image">

    </div>
    <div class="col-lg-6 sign-in-form test-bg">
      <h2 class="header-title mt-5">Welcome Back!</h2>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field mt-3">
          <%= f.label :email, class: "subtitle" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-field" %>
        </div>

        <div class="field mt-3">
          <%= f.label :password, class: "subtitle" %><br />
          <%= f.password_field :password, autocomplete: "current-password", class: "form-field" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field mt-3">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, class: "subtitle-lil" %>
          </div>
        <% end %>

        <div class="actions mt-3 mb-3">
          <%= f.submit "Log in", class: "btn btn-lg custom-btn" %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

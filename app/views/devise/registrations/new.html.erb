<div class="container mt-2 mb-3">
  <div class="row">
    <div class="col-lg-6 sign-up-image">

    </div>
    <div class="col-lg-6 mb-5 form-center-align">
      <h2 class="header-title mt-5 mb-3">Join the Scramble!</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :name, class: "subtitle" %><br />
          <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-field" %>
        </div>

        <div class="field">
          <%= f.label :email, class: "subtitle" %><br />
          <%= f.email_field :email, autocomplete: "email", class:"form-field" %>
        </div>

        <div class="field">
          <%= f.label :password, class: "subtitle" %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class:"form-field" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, class: "subtitle" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-field" %>
        </div>

        <div class="actions">
          <%= f.submit "Sign up", class: "btn btn-lg custom-btn mt-3" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>

    </div>
  </div>
</div>

<section class="users-section">
  <h1>friends</h1>
  <ul class="users-list">
    <% @friendships.each do |friendship| %>
      <li>
        <%= friendship.rqstuser.name if friendship.status %>
      </li>
    <% end %>
  </ul>
  <h1>pending friends</h1>
  <ul class="users-list">
    <% @friendships.each do |friendship| %>
      <li>
        <%= friendship.rqstuser.name if !friendship.status %>
      </li>
    <% end %>
  </ul>
</section>

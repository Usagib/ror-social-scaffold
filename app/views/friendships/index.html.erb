<section class="users-section">
  <h1>Friend Requests</h1>
  <ul class="users-list">
    <% @friend_requests.each do |friendship| %>
      <li>
        <%= "#{ friendship.user.name} wants to connect with you" if !friendship.status %>
        <%= confirm_btn %>
      </li>
    <% end %>
  </ul>
</section>

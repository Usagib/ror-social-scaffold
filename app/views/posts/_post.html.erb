<li class="post">
  <div class="container mt-2 mb-5">
    <div class="row">
      <div class="col-lg-4">
          <%= link_to post.user.name+" says:", user_path(post.user), class: 'header-title-2' %>
          <p class = "subtitle-2">
          <%= "#{post.likes.count} #{"like".pluralize(post.likes.count)}"%>
          </p>
          <p class = "like-btn">
          <%= image_tag("likebtn.png", height: "30") %>
          <%= like_or_dislike_btn(post)%>
          </p>
      </div>
      <div class="col-lg-8">
        <p class="post-content">
          <%= post.content %>
        </p>

        <div class='post-comments-section'>
          <% post.comments.each do |comment| %>
            <div class="post-comments">
              <p>
                <b><%= comment.user.name %>:</b> <%= comment.content %>
              </p>
              <span> <%= comment.created_at.strftime("%Y/%m/%d") %> </span>
            </div>
          <% end %>

          <%= form_for(post.comments.new, url: post_comments_path(post)) do |form| %>
            <%= form.text_field :content, id: :comment_content, class: 'form-control', placeholder: 'Add new Comment' %>
            <%= form.submit 'Comment', class: 'btn btn-sm custom-btn mt-3' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</li>
